                            <div class="col-sm-10" id="profile" style="display: block;padding: 0px;border-left:1px solid #BBBBBB;min-height: 500px">
                                <div class="head" align="center" style="border-bottom: 1px solid #BBBBBB;height: 80px;padding:1.5%;">
                                   <h3 style="font-weight: 600">Profile</h3>
                                   <p style="font-size: 17px">Add information about yourself to share on your profile.</p>
                                </div>
                                <form action="edit_profile" method="post">
                                <div class="content" style="height: auto;">
                                        <p style="font-size: 17px">Basics :</p>
                                        <input type="text" class="form-control" name="uname" value="<%= user.name %>" disabled >
                                        <br>
                                        <input type="text" class="form-control" name="contact" value="<%= user.contact %>">
                                        <br>
                                        <input type="text" class="form-control" name="email" value="<%= user.email %>" disabled >
                                        <br>
                                </div>
                                <div class="content" align="center" style="height: 90px;border-top: 1px solid #BBBBBB">
                                    <button class="btn btn-danger btn-lg" type="submit">Save</button>
                                </div>
                                </form>
                            </div>
                            <div class="col-sm-10" id="photo" style="display: none;padding: 0px;border-left:1px solid #BBBBBB;min-height: 500px">
                                <div class="head" align="center" style="border-bottom: 1px solid #BBBBBB;height: 80px;padding:1.5%;">
                                   <h3 style="font-weight: 600">Photo</h3>
                                   <p style="font-size: 17px">Add a nice photo of yourself for your profile.</p>
                                </div>
                                <form action="edit_photo" method="post" enctype="multipart/form-data">
                                <div class="content" style="height: auto">
                                        <p style="font-size: 17px">Image Preview :</p>
                                        <br>
                                        <div id="preview" style="height: 250px;width: 100%;border:1px solid #BBBBBB">
                                            <% if(user.profile == null){ %>
                                            <img src="uploads/profile/default.png" style="max-height: 250px">
                                            <% } else { %>
                                            <img src="uploads/profile/<%= user.profile %>" style="max-height: 250px">
                                            <% } %>
                                        </div>
                                        <br>


                                        <p style="font-size: 17px">Add / Change Image :</p>
                                        <br>

                                        <div class="form-group">
                                            <input type="file" name="input-fa" class="file">
                                            <div class="input-group col-xs-12">
                                              <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                                              <input type="text" class="form-control input-lg" disabled placeholder="Upload Image">
                                              <span class="input-group-btn">
                                                <button class="browse btn btn-default btn-lg" type="button"><i class="glyphicon glyphicon-search"></i> Browse</button>
