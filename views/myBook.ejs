                                                    <li>
                                                        <span>edition :</span> february 2018</li>
                                                    <li>
                                                        <span>pages :</span> 765</li>
                                                </ul>
                                            </div>
                                            <div align="right" style="width:500px;padding-top: 100px">
                                                <a href="preview?bid=<%= collItem.bid %>">
                                                    <button class="btn btn-primary btn-lg" style="background-color: #ff0000">Read Now</button>
                                                </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                <a href="like?bid=<%= collItem.bid %>">
                                                    <button class="btn btn-primary btn-lg" style="background-color: #0000ff">
                                                    <span class="fa fa-thumbs-up nav-icon"></span> Like</button>
                                                </a>
                                            </div>
                                        </div>
                                    </td>

