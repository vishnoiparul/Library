        $("#input-fa").fileinput({
            theme: "fa",
            uploadUrl : '/addimage/4'
        });
    </script>
    <!-- //fixed-scroll-nav-js -->
    <!-- dropdown nav -->
    <script>
        $(document).ready(function () {
            $('#buying').change(() => {
                var z = $('#buying').val()
                // alert(z)
                if(z == 'paid'){
                    $('#actual').prop('disabled',false)
                    $('#discount').prop('disabled',false)
                } else {
                    $('#actual').prop('disabled',true)
                    $('#discount').prop('disabled',true)
                }
            })
        })
    </script>
    
    <script>
        $(document).ready(function () {
            $('#discount').on('input',() => {
                var z = $('#discount').val()
                // alert(z)
                if((z >= 0)&&(z<100)){
                    $('#addbookalert').css('display','none')
                    $('#btn-signup').prop('disabled',false)
                }else{
                    // alert('working')
                    $('#addbookalert').css('display','block')
                    $('#diserror').text('Discount value should be in between 0 to 100')
                    $('#btn-signup').prop('disabled',true)
                }
            })
        })
    </script>
