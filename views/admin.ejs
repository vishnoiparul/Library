                                <!-- Image Uploading form field -->
                                <div class="form-group">
                                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Images</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        
                                    <div class="file-loading">
                                        <input id="input-fa" name="input-fa" type="file">
                                    </div>


                                    </div>
                                </div>
                                <div style="border-top: 1px solid #999; padding-top:20px" class="form-group">

                                    <!-- Button -->
                                    <div class="signup-btn">
                                        <button type="submit" class="btn btn-info">
                                            <i class="icon-hand-right"></i> &nbsp; Add Image</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% } else if(form == 3) {%>
                <div id="filebox" style="margin-top:50px" class="mainbox addbookbox">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">Add File</div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px">
                            </div>
                        </div>
                        <div class="panel-body">
                            <form id="addfileform" class="form-horizontal" action="addfile" enctype="multipart/form-data" method="post">
                                <!-- File Uploading form field -->
                                <div class="form-group">
                                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">File</label>
                                    <div class="col-md-9 col-sm-9 col-xs-9">
                                        <div class="file-loading">
                                            <input id="input-fa" name="pdf" type="file">
                                        </div>
                                    </div>
                                </div>
                                <div style="border-top: 1px solid #999; padding-top:20px" class="form-group">

                                    <!-- Button -->
                                    <div class="signup-btn">
                                        <button type="submit" class="btn btn-info">
                                            <i class="icon-hand-right"></i> &nbsp; Add PDF</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
